/* Implements REQ_FADEX_OS_SRD-SCHED-0010 */
/* Implements REQ_FADEX_OS_SRD-SCHED-0040 */
/* Fast task agent to schedule applicative software */
agent css_wrapper_g4_ag_fast_task(uses SOURCE,
                                  starttime 2 with clock_10ms_offset_4ms)
{
   body start
   {
      /* Initialize applicative software environment for GX (g1_2_3 or g4) */
      css_wrapper_g4_init_task();

      /* 6ms for the fast task, then advance to the next tick */
      timebudget budget_css_wrapper_g4_ag_fast_task_1, advance 6 with clock_1ms;
      timebudget budget_css_wrapper_g4_ag_fast_task_compil_1, advance 4 with clock_1ms;

      /* Go to body run */
      next run;
   }

   body run
   {
      /* Call the applicative fast task for the scheduling g4 */
      css_wrapper_g4_fast_task();

      /* 8ms for the fast task, then advance to the next tick */
      timebudget budget_css_wrapper_g4_ag_fast_task_2, advance 6 with clock_1ms;
      timebudget budget_css_wrapper_g4_ag_fast_task_compil_2, advance 4 with clock_1ms;
   }
}

