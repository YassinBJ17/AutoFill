/* Implements REQ_FADEX_OS_SRD-SCHED-0010 */
/* Implements REQ_FADEX_OS_SRD-SCHED-0040 */
/* Implements REQ_FADEX_OS_SRD-SCHED-0080 */
/* Very slow task agent to schedule applicative software */
agent css_wrapper_g1_2_3_ag_very_slow_task(uses SOURCE,
                                           starttime 3 with clock_10ms,
                                           defaultclock clock_10ms)
{
   consult
   {
      /* Consult sync_st_vst_tv produced by ag_ST */
      1 $sync_st_vst_tv;
   }

   display
   {
      /* Display sync_vst_bt_tv to ag_BT */
      sync_vst_bt_tv: css_wrapper_g1_2_3_ag_background_task;
   }

   body start
   {
      /* Time at disposal for the very slow task */
      sync_vst_bt_tv = $[0] sync_st_vst_tv + 1;

      /* Call the applicative very slow task for the scheduling g1_2_3 */
      css_wrapper_g1_2_3_very_slow_task();

      /* 500ms allocated to the very slow task until going to the next cycle */
      timebudget budget_css_wrapper_g1_2_3_ag_very_slow_task, advance 495 with clock_1ms;
      timebudget budget_css_wrapper_g1_2_3_ag_very_slow_task_compil, advance 5 with clock_1ms;
   }
}

