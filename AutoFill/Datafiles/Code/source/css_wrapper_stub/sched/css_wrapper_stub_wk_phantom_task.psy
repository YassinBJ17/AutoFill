worker css_wrapper_stub_wk_phantom_task(uses SOURCE)
{
   /* Start the job at the beginning of the RTC */
   output
   {
      /* Job in charge of execution */
      job job_reserve_4ms(onclock clock_10ms, starttime 1, jitter duration_4ms)
      {
         /* Body of the job referencing the budget given to the phantom task */
         khibody(timebudget budget_wk_oss_phantom_task)
         {
            /* Wait during 4 ms doing nothing */
         }
      }
   }
}
